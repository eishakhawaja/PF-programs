#include<stdio.h>
int main()
{
    int arr[100], n,i;

    printf("enter the value to which largest number has to be found:");
    scanf("%d",&n);

printf("now enter numbers:");
    for(i=0;i<n;i++)
    {
        scanf("%d",&arr[i]);
    }

int max=arr[0];
int min=arr[0];

for(i=0;i<n;i++)
    {
        if(max<arr[i])
        {
            max=arr[i];

        }

        if (min>arr[i])
        {
            min=arr[i];
        }
    }

   printf("\n largest number is = %d",max) ;
    printf("\n smallest number is = %d",min) ;
}
